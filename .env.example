# Hisaabb Production Environment Configuration
# Copy this file to .env and update the values for your deployment

# API Configuration
VITE_API_BASE_URL=https://api.your-domain.com/api
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3

# Authentication Configuration
VITE_TOKEN_EXPIRY=86400000
VITE_REFRESH_THRESHOLD=300000
VITE_MAX_LOGIN_ATTEMPTS=5
VITE_LOCKOUT_DURATION=900000

# Feature Flags
VITE_ENABLE_AI_ASSISTANT=true
VITE_ENABLE_ADVANCED_ANALYTICS=true
VITE_ENABLE_MULTI_LANGUAGE=true
VITE_ENABLE_DARK_MODE=false
VITE_ENABLE_NOTIFICATIONS=true

# UI Configuration
VITE_DEFAULT_LANGUAGE=en
VITE_ENABLE_ANIMATIONS=true
VITE_COMPACT_MODE=false

# Storage Configuration
VITE_STORAGE_PREFIX=hisaabb_
VITE_ENABLE_ENCRYPTION=true

# Logging Configuration
VITE_LOG_LEVEL=error
VITE_ENABLE_CONSOLE_LOGS=false
VITE_ENABLE_REMOTE_LOGGING=true

# Performance Configuration
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_CACHING=true
VITE_CACHE_EXPIRY=3600000

# Google AI Studio Configuration (for AI Assistant)
# Get your API key from: https://makersuite.google.com/app/apikey
# VITE_GOOGLE_AI_API_KEY=your_google_ai_studio_api_key_here

# Security Configuration
VITE_ENABLE_CSP=true
VITE_ENABLE_HSTS=true
VITE_ENABLE_XSS_PROTECTION=true

# Monitoring Configuration
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_USER_ANALYTICS=false

# Development Configuration (for development environment only)
# VITE_API_BASE_URL=http://localhost:3001/api
# VITE_LOG_LEVEL=debug
# VITE_ENABLE_CONSOLE_LOGS=true
# VITE_ENABLE_REMOTE_LOGGING=false
# VITE_ENABLE_ERROR_REPORTING=false

# Database Configuration (Backend - if using Firebase/Supabase)
# VITE_DATABASE_URL=your_database_url
# VITE_DATABASE_API_KEY=your_database_api_key

# CDN Configuration (for production assets)
# VITE_CDN_BASE_URL=https://cdn.your-domain.com

# Email Service Configuration (for notifications)
# VITE_EMAIL_SERVICE_URL=your_email_service_url
# VITE_EMAIL_API_KEY=your_email_api_key

# Payment Gateway Configuration (if needed)
# VITE_PAYMENT_GATEWAY_URL=your_payment_gateway_url
# VITE_PAYMENT_API_KEY=your_payment_api_key

# Analytics Configuration (Google Analytics, etc.)
# VITE_GA_TRACKING_ID=your_google_analytics_id
# VITE_ANALYTICS_API_KEY=your_analytics_api_key

# Third-party Integrations
# VITE_MAPS_API_KEY=your_maps_api_key
# VITE_SMS_API_KEY=your_sms_api_key
# VITE_WHATSAPP_API_KEY=your_whatsapp_api_key

# Backup Configuration
# VITE_BACKUP_SERVICE_URL=your_backup_service_url
# VITE_BACKUP_API_KEY=your_backup_api_key

# Multi-tenant Configuration (if applicable)
# VITE_TENANT_ID=your_tenant_id
# VITE_MULTI_TENANT_MODE=false

# Custom Branding (if white-label solution)
# VITE_BRAND_NAME=Hisaabb
# VITE_BRAND_LOGO_URL=your_brand_logo_url
# VITE_BRAND_PRIMARY_COLOR=#3B82F6
# VITE_BRAND_SECONDARY_COLOR=#1E40AF
